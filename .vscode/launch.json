{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask SSL",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "testr/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--cert=ssl/cert.pem",
                "--key=ssl/key.pem",
                "--host=0.0.0.0"
            ],
            "jinja": true
        },
        {
            "name": "Flask (live-reload)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "testr/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "TEMPLATES_AUTO_RELOAD": "True"
            },
            "args": [
                "run",
                "--no-debugger",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Flask (debug)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "testr/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "TEMPLATES_AUTO_RELOAD": "True"
            },
            "args": [
                "run"
            ],
            "jinja": true
        },
        {
            "name": "Flask DB Migrate",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {},
            "args": [
                "db",
                "migrate"
            ]
        }
    ]
}