{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "testr/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Flask (live-reload)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "testr/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "TEMPLATES_AUTO_RELOAD": "True"
            },
            "args": [
                "run",
                "--no-debugger",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Flask (debug)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "testr/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "TEMPLATES_AUTO_RELOAD": "True"
            },
            "args": [
                "run"
            ],
            "jinja": true
        }
    ]
}